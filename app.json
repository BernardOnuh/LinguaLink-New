{
  "expo": {
    "name": "LinguaLink",
    "slug": "LinguaLinkNewts",
    "version": "1.0.0",
    "scheme": "lingualink",
    "orientation": "portrait",
    "icon": "./assets/lingualink-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF8A00"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bernard.o.LinguaLink"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/lingualink-adaptive-icon.png",
        "backgroundColor": "#FF8A00"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.bernard.o.LinguaLink",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow LinguaLink to access your microphone for voice recording."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LinguaLink to access your camera for video recording."
        }
      ],
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
