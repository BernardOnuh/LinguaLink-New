{
  "expo": {
    "name": "LinguaLink",
    "slug": "LinguaLinkNewts",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF8A00"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bernard.o.LinguaLinkNewts"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#FF8A00"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.bernard.o.LinguaLinkNewts",
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow LinguaLink to access your microphone for voice recording."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LinguaLink to access your camera for video recording."
        }
      ]
    ],
    "extra": {
      "eas": {
        "projectId": "787df3ed-7745-432c-80a6-187519af0a74"
      }
    }
  }
}