{
  "expo": {
    "name": "LinguaLink",
    "slug": "lingualink",
    "version": "1.0.0",
    "scheme": "lingualink",
    "orientation": "portrait",
    "icon": "./assets/lingualink-icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#FF8A00"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.bernard.o.LinguaLink",
      "infoPlist": {
        "CFBundleURLTypes": [
          {
            "CFBundleURLName": "lingualink",
            "CFBundleURLSchemes": [
              "lingualink"
            ]
          }
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/lingualink-adaptive-icon.png",
        "backgroundColor": "#FF8A00"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.bernard.o.LinguaLink",
      "intentFilters": [
        {
          "action": "VIEW",
          "autoVerify": true,
          "data": [
            {
              "scheme": "lingualink"
            }
          ],
          "category": [
            "BROWSABLE",
            "DEFAULT"
          ]
        }
      ],
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.MODIFY_AUDIO_SETTINGS"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-av",
        {
          "microphonePermission": "Allow LinguaLink to access your microphone for voice recording."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow LinguaLink to access your camera for video recording."
        }
      ],
      "expo-web-browser"
    ],
    "extra": {
      "eas": {
        "projectId": "af768486-4cf1-42d7-bfe9-32c0d564bf75"
      },
      "EXPO_PUBLIC_SUPABASE_URL": "https://yeaurbjtntkwbbqwjutm.supabase.co",
